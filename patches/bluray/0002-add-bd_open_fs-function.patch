+BLURAY *bd_open_fs(const char *device_path, const char *keyfile_path, fs_access *p_fs)
+{
+    BLURAY *bd;
+
+    bd = bd_init();
+    if (!bd) {
+        return NULL;
+    }
+
+    if (!device_path) {
+        BD_DEBUG(DBG_BLURAY | DBG_CRIT, "No device path provided!\n");
+        bd_close(bd);
+        return NULL;
+    }
+
+    if (!_bd_open(bd, device_path, keyfile_path, p_fs)) {
+        bd_close(bd);
+        return NULL;
+    }
+
+    return bd;
+}
